import pygame
import pyttsx3 as p
import time
def play_alarm_sound(sound_file):
    pygame.mixer.init()
    pygame.mixer.music.load(sound_file)
    pygame.mixer.music.play()
def main():
    alarm_time = input("Enter the alarm time in HH:MM format: ")
    sound_file = "alarm_sound.mp3"  # Provide the path to your audio file
    try:
        while True:
            current_time = time.strftime("%H:%M")
            if current_time == alarm_time:
                print("Time to wake up!")
                #play_alarm_sound(sound_file)
                p.speak("Alarm")
                break
            time.sleep(60)  # Check the time every 60 seconds
    except KeyboardInterrupt:
        pygame.mixer.music.stop()
        pygame.mixer.quit()

main()
